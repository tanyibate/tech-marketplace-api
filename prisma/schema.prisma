// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String
  createdAt DateTime @default(now())
  address String?
  password  String?
  role Role @default(USER)
  googleId String? @unique
}

model Product {
  id    Int     @id @default(autoincrement())
  name  String
  price Float
  createdAt DateTime @default(now())  
  category Categories
  updatedAt DateTime @updatedAt
  productImage Json?
  categoryImage Json?
  othersImage Json?
  imageGallery Json[]
  accessories Accessories[]
}

model Accessories {
  id Int @id @default(autoincrement())
  product  Product   @relation(fields: [productId], references: [id])
  productId Int
  quantity Int
}



enum Role {
  USER
  ADMIN
}

enum Categories {
  Headphones
  Speakers
  Laptops
  Desktops
  Mobiles
  Televisions
  Fridges
  Freezers
  Earphones
}

enum ImageType {
  mobile
  desktop
  tablet
}